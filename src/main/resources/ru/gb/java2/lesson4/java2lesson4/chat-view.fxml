<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="BOTTOM_RIGHT" spacing="5.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ru.gb.java2.lesson4.java2lesson4.TestChatController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <TextArea fx:id="messageText" VBox.vgrow="ALWAYS" editable="false"/>
    <Label fx:id="statusText"/>
    <HBox spacing="10">

        <TextField fx:id="sendText" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#onSend" defaultButton="true"/>
    </HBox>
</VBox>
